{% apply spaceless %}
                        
    <li class="nav-item nav-toggle {% if is_menu_open(menu) %}menu-open{% endif %}">
        <a href="javascript:;{% if childs is empty %}{{ menu.adminPath }}{% endif %}" class="nav-toggle nav-link {% if is_active_path(menu.adminPath) %}active{% endif %}">
            {% if menu.iconClass %}<i class="nav-icon {{ menu.iconClass }}"></i>{% endif %}<span class="title">{{ menu.name | humanize }}{% if childs is not empty %}{% endif %}</span><span class="arrow"></span>
            
        </a>
        {% if childs is not empty %}
            <ul class="sub-menu">
                {% for child in childs %}
                    {% include 'layout/child_menu.html.twig' with { menu: child }%}
                {% endfor %}
            </ul>
        {% endif %}
    </li>
{% endapply %}
